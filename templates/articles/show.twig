{% extends "master.twig" %}

{% block title %}Detail Artikel{% endblock %}

{% block content %}
<div class="px-0 py-4">

    <!-- Card 1: Detail Artikel -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="mb-4">Detail Artikel</h5>

            <div class="row">
                <!-- Kiri -->
                <div class="col-md-4 mb-4">
                    <div class="mb-3"><strong>Gambar:</strong><br>
                        {% if article.image %}
                            <img src="/uploads/images/{{ article.image }}" class="img-fluid rounded border" style="max-height: 250px; width: 100%; object-fit: cover;">
                        {% else %}
                            <em>- Tidak ada gambar -</em>
                        {% endif %}
                    </div>

                    <div class="mb-3"><strong>Lampiran:</strong><br>
                        {% if article.file %}
                            <a href="/uploads/files/{{ article.file }}" target="_blank" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-download"></i> Unduh Lampiran
                            </a>
                        {% else %}
                            <em>- Tidak ada file -</em>
                        {% endif %}
                    </div>

                    <div class="mb-3"><strong>Status:</strong><br>
                        {% if article.status == 0 %}
                            <span class="badge text-bg-warning">Menunggu</span>
                        {% elseif article.status == 1 %}
                            <span class="badge text-bg-success">Disetujui</span>
                        {% elseif article.status == 2 %}
                            <span class="badge text-bg-info">Direvisi</span>
                        {% elseif article.status == 3 %}
                            <span class="badge text-bg-danger">Ditolak</span>
                        {% endif %}
                    </div>
                </div>

                <!-- Kanan -->
                <div class="col-md-8">
                    <div class="mb-3"><strong>Judul:</strong><br>{{ article.title }}</div>

                    <div class="mb-3"><strong>Penulis:</strong><br>{{ article.user_name }}</div>

                    <div class="mb-3"><strong>Kategori:</strong><br>
                        {{ article.categories|join(', ') }}
                    </div>

                    <div class="mb-3"><strong>Tanggal:</strong><br>{{ article.created_at_formatted }}</div>

                    <div class="mb-3"><strong>Konten:</strong><br>
                        <div class="border rounded p-3 bg-light">
                            {{ article.content|raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Card 2: Form Review -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="mb-3">Tinjau & Beri Feedback</h5>
            <form method="POST" action="/articles/{{ article.id }}/review">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="status" class="form-label">Status Artikel</label>
                        <select name="status" id="status" class="form-select">
                            <option value="0" {% if article.status == 0 %}selected{% endif %}>Menunggu</option>
                            <option value="1" {% if article.status == 1 %}selected{% endif %}>Disetujui</option>
                            <option value="2" {% if article.status == 2 %}selected{% endif %}>Direvisi</option>
                            <option value="3" {% if article.status == 3 %}selected{% endif %}>Ditolak</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="notes" class="form-label">Feedback</label>
                    <textarea name="notes" id="notes" class="form-control" rows="4" placeholder="Tulis feedback...">{{ review.notes ?? '' }}</textarea>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send"></i> Submit Review
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Card 3: Riwayat Review -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h5 class="mb-3">Riwayat Feedback</h5>

            {% if review_history is not empty %}
                <table class="table table-bordered table-sm">
                    <thead class="table-light">
                        <tr>
                            <th>Tanggal</th>
                            <th>Status</th>
                            <th>Feedback</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for r in review_history %}
                            <tr>
                                <td>{{ r.created_at|date('d M Y H:i') }}</td>
                                <td>
                                    {% if r.status == 1 %}
                                        <span class="badge bg-success">Disetujui</span>
                                    {% elseif r.status == 2 %}
                                        <span class="badge bg-info text-dark">Direvisi</span>
                                    {% elseif r.status == 3 %}
                                        <span class="badge bg-danger">Ditolak</span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark">Menunggu</span>
                                    {% endif %}
                                </td>
                                <td>{{ r.notes }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="text-muted fst-italic">Belum ada riwayat review di artikel ini.</p>
            {% endif %}
        </div>
    </div>

    <!-- Tombol Kembali -->
    <div class="text-end mt-4">
        <a href="/articles" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Kembali</a>
    </div>

</div>
{% endblock %}
