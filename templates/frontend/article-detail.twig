{% extends "frontend/master.twig" %}

{% block title %}{{ article.title }} - Cerita Kita{% endblock %}

{% block content %}
<!-- Article Header -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" data-aos="fade-up">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Beranda</a></li>
                        <li class="breadcrumb-item"><a href="/stories" class="text-decoration-none">Artikel</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ article.category_name }}</li>
                    </ol>
                </nav>

                <!-- Article Meta -->
                <div class="article-header" data-aos="fade-up" data-aos-delay="100">
                    <div class="d-flex flex-wrap align-items-center gap-3 mb-3">
                        <span class="badge bg-primary px-3 py-2 rounded-pill">
                            <i class="fas fa-tag me-1"></i>{{ article.category_name }}
                        </span>
                        <span class="text-muted">
                            <i class="far fa-calendar-alt me-1"></i>{{ article.created_at|date('d M Y') }}
                        </span>
                        <span class="text-muted">
                            <i class="far fa-clock me-1"></i>{{ article.read_time }} menit baca
                        </span>
                    </div>

                    <h1 class="display-5 fw-bold text-dark mb-4">
                        {{ article.title }}
                    </h1>

                    <!-- Author Info -->
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <div class="d-flex align-items-center">
                            <img src="/img/orang1.jpeg" alt="Author" class="rounded-circle me-3" style="width: 60px; height: 60px;">
                            <div>
                                <h6 class="mb-0 fw-bold">{{ article.author_name }}</h6>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary btn-sm" id="likeBtn">
                                <i class="far fa-heart me-1"></i>0
                            </button>
                            <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#shareModal">
                                <i class="fas fa-share-alt me-1"></i>Share
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Article Content -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Featured Image -->
                <div class="mb-5" data-aos="fade-up">
                    <img src="/uploads/images/{{ article.image }}" 
                         alt="{{ article.title }}" 
                         class="img-fluid rounded-3 shadow-lg w-100"
                         style="height: 400px; object-fit: cover;">
                </div>

                <!-- Article Body -->
                <div class="article-content" data-aos="fade-up" data-aos-delay="100">
                    <div class="content-body">
                        {{ article.content|raw }}
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sticky-top" style="top: 100px;">
                    <!-- Related Articles -->
                    <div class="card" data-aos="fade-left" data-aos-delay="100">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-newspaper me-2"></i>Artikel Terkait</h6>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                {% for related in relatedArticles %}
                                <a href="/article/{{ related.slug }}" class="list-group-item list-group-item-action">
                                    <div class="d-flex">
                                        <img src="/uploads/images/{{ related.image }}" alt="Related" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                        <div>
                                            <h6 class="mb-1 small">{{ related.title }}</h6>
                                            <small class="text-muted">{{ related.created_at|date('d M Y') }}</small>
                                        </div>
                                    </div>
                                </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Share Modal -->
<div class="modal fade" id="shareModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bagikan Artikel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-6">
                        <a href="#" class="btn btn-primary w-100">
                            <i class="fab fa-facebook-f me-2"></i>Facebook
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="#" class="btn btn-info w-100">
                            <i class="fab fa-twitter me-2"></i>Twitter
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="#" class="btn btn-success w-100">
                            <i class="fab fa-whatsapp me-2"></i>WhatsApp
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="#" class="btn btn-primary w-100">
                            <i class="fab fa-linkedin-in me-2"></i>LinkedIn
                        </a>
                    </div>
                </div>
                <hr>
                <div class="input-group">
                    <input type="text" class="form-control" value="{{ 'https://ceritakita.com/article/' ~ article.slug }}" readonly>
                    <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard()">
                        <i class="fas fa-copy"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include script section from original file -->
{% endblock %}