{% extends "master.twig" %}

{% block title %}Dashboard{% endblock %}

{% block content %}
<div class="dashboard-container">
    <!-- Header Welcome Section -->
    <div class="welcome-section">
        <div class="welcome-content">
            <div class="welcome-text">
                <h1 class="welcome-title">ADMIN Selamat Datang di <span class="brand-highlight">Cerita Kita</span></h1>
                <p class="welcome-subtitle">Halo, {{ user.name }}! Mari jelajahi dunia cerita bersama.</p>
            </div>
            <div class="welcome-illustration">
                <div class="floating-card">
                 <img src="/img/logo.png" alt="Cerita Kita Logo" class="logo-dashboard">
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card stat-primary">
            <div class="stat-icon">
                <i class="bi bi-journals"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">{{ totalCerita }}</h3>
                <p class="stat-label">Total Cerita</p>
            </div>
        </div>
        
        <div class="stat-card stat-success">
            <div class="stat-icon">
                <i class="bi bi-people-fill"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">{{ totalKontributor }}</h3>
                <p class="stat-label">Jumlah Kontributor</p>
            </div>
        </div>
        
        <div class="stat-card stat-info">
            <div class="stat-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">{{ yangDisetujui }}</h3>
                <p class="stat-label">Yang Disetujui</p>
            </div>
        </div>
        
        <div class="stat-card stat-warning">
            <div class="stat-icon">
                <i class="bi bi-cash-coin"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">{{ yangDibayar }}</h3>
                <p class="stat-label">Yang Dibayar</p>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Recent Stories -->
        <div class="dashboard-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="bi bi-clock-history"></i>
                    Cerita Terbaru
                </h3>
                <a href="/articles/stories" class="card-link">Lihat Semua</a>
            </div>
            <div class="card-body">
                <div class="story-list">
                    {% if latestStories and latestStories|length > 0 %}
                        {% for story in latestStories %}
                            <div class="story-item">
                                <div class="story-placeholder">
                                    <i class="bi bi-book"></i>
                                </div>
                                <div class="story-info">
                                    <h4>{{ story.title }}</h4>
                                    <p>{{ story.user_name }} • {{ story.created_at_formatted }} • {{ story.status_label }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="story-item">
                            <div class="story-placeholder">
                                <i class="bi bi-book"></i>
                            </div>
                            <div class="story-info">
                                <h4>Belum ada cerita</h4>
                                <p>Mulai tulis cerita pertama Anda!</p>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="dashboard-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="bi bi-lightning-fill"></i>
                    Aksi Cepat
                </h3>
            </div>
            <div class="card-body">
                <div class="action-buttons">
                    <a href="/categories/posts" class="action-btn btn-primary">
                        <i class="bi bi-tags-fill"></i>
                        <span>Kategori Artikel</span>
                    </a>
                    <a href="/categories/stories" class="action-btn btn-secondary">
                        <i class="bi bi-bookmark-fill"></i>
                        <span>Kategori Cerita</span>
                    </a>
                    <a href="/articles/posts" class="action-btn btn-info">
                        <i class="bi bi-file-earmark-text-fill"></i>
                        <span>Post Artikel</span>
                    </a>
                    <a href="/articles/stories" class="action-btn btn-success">
                        <i class="bi bi-pen-fill"></i>
                        <span>Post Cerita</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}