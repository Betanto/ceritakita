<!DOCTYPE html>
<html lang="EN">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Cerita Kita{% endblock %}</title>

    <!-- Fonts -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Scripts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    {% block header %}{% endblock %}
</head>

<body>
    <div id="app">
        <div class="wrapper">
            <!-- Sidebar Overlay for Mobile -->
            <div class="sidebar-overlay" id="sidebarOverlay"></div>
            
            <!-- Sidebar -->
            {% include 'partials/sidebar.twig' %}

            <!-- Main Content -->
            <div id="content">
                <!-- Top Navigation -->
                <nav class="navbar navbar-expand-lg sticky-top">
                    <div class="container-fluid">
                        <div class="navbar-brand">
                            <button type="button" id="sidebarCollapse" class="btn">
                                <i class="bi bi-list"></i>
                            </button>
                        </div>
                        
                        <h1 class="page-title flex-grow-1">
                            <i class="bi {{ pageicon }} me-2"></i>
                            {{ pagetitle }}
                        </h1>

                        <!-- User Dropdown -->
                        <div class="user-dropdown">
                            <div class="dropdown">
                                <a class="user-info dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar">
                                        {{ user.name|first|upper }}
                                    </div>
                                    <span class="d-none d-md-inline">{{ user.name }}</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="/profile">
                                            <i class="bi bi-person me-2"></i>
                                            Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="/logout">
                                            <i class="bi bi-box-arrow-left me-2"></i>
                                            Logout
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

                <!-- Main Content Area -->
                <main class="container-fluid px-0 pt-0">
                    {% block content %}{% endblock %}
                </main>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        // Sidebar Toggle
        $('#sidebarCollapse').on('click', function () {
            if (window.innerWidth > 768) {
                // Desktop behavior: collapse/expand sidebar
                $('#sidebar').toggleClass('collapsed');
                $('#content').toggleClass('collapsed');
            } else {
                // Mobile behavior: show/hide sidebar
                $('#sidebar').toggleClass('mobile-active');
                $('#sidebarOverlay').toggleClass('active');
            }
        });

        // Close sidebar when clicking overlay (mobile)
        $('#sidebarOverlay').on('click', function () {
            $('#sidebar').removeClass('mobile-active');
            $(this).removeClass('active');
        });

        // Auto-close sidebar on mobile when clicking nav links
        $('.nav-link').on('click', function () {
            if (window.innerWidth <= 768) {
                $('#sidebar').removeClass('mobile-active');
                $('#sidebarOverlay').removeClass('active');
            }
        });

        // Handle window resize
        $(window).on('resize', function () {
            if (window.innerWidth > 768) {
                $('#sidebarOverlay').removeClass('active');
                $('#sidebar').removeClass('mobile-active');
            } else {
                $('#sidebar').removeClass('collapsed');
                $('#content').removeClass('collapsed');
            }
        });
    </script>

    {% if flash.success %}
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Berhasil!',
            text: '{{ flash.success|e('js') }}',
            showConfirmButton: false,
            timer: 3000,
            toast: true,
            position: 'top-end'
        });
    </script>
    {% endif %}

    {% if flash.error %}
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Error!',
            text: '{{ flash.error|e('js') }}',
            showConfirmButton: false,
            timer: 3000,
            toast: true,
            position: 'top-end'
        });
    </script>
    {% endif %}

    {% block script %}{% endblock %}
</body>
</html>